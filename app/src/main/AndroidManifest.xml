<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatroom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chat_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chat_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptoGuru">
        <activity
            android:name="com.chatroom.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.chatroom.GroupChatActivity"
            android:exported="false" />
        <activity
            android:name="com.chatroom.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.chatroom.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chatroom.SignInActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name="com.chatroom.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.chatroom.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>